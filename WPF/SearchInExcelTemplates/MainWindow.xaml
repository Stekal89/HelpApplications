<Window x:Class="SearchInExcelTemplates.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchInExcelTemplates"
        mc:Ignorable="d"
        Title="Search in Excel Templates" MinHeight="450" MinWidth="800">
    <Window.Resources>
        <Style x:Key="styleGridSplitter" TargetType="GridSplitter" >
            <Setter Property="ResizeDirection"     Value="Rows" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Foreground"          Value="Black" />
            <Setter Property="Background"          Value="Black" />
            <Setter Property="Height"              Value="1px" />
            <Setter Property="Margin"              Value="0px,8px,0px,8px" />
            <Setter Property="ResizeBehavior"      Value="PreviousAndNext" />
            <Setter Property="ShowsPreview"        Value="False" />
        </Style>

