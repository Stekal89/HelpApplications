    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10px" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10px" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10px" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10px" />
        </Grid.ColumnDefinitions>

        <!--#region Searchparameter  -->

        <GroupBox Grid.Row="1" Grid.Column="1" Header="Parameter" BorderBrush="Black" BorderThickness="1px" Padding="10,10,10,10" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Suchparameter:" VerticalContentAlignment="Center" Margin="0px,0px, 0px,2px" />
                <TextBox x:Name="tbxSearchParameter" Grid.Row="0" Grid.Column="1" VerticalContentAlignment="Center" Margin="0px,0px, 0px,2px" />

                <Label Grid.Row="1" Grid.Column="0" Content="Pfad:" VerticalContentAlignment="Center" Margin="0px,2px, 0px,2px" />
                <TextBox x:Name="tbxPath" Grid.Row="1" Grid.Column="1" MinWidth="150px" VerticalContentAlignment="Center" Margin="0px,2px, 0px,2px" />

                <Label Grid.Row="2" Grid.Column="0" Content="Filter:" VerticalContentAlignment="Center" Margin="0px,2px, 0px,0px" />
                <TextBox x:Name="tbxFilter" Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center" Margin="0px,2px, 0px,0px" />
            </Grid>
        </GroupBox>
        
        <!--#endregion-->



        <!--#region Result (List)  -->

        <GroupBox Grid.Row="2" Grid.Column="1" Header="Resultat" BorderBrush="Black" BorderThickness="1px" Padding="10,10,10,10" >
            <ListView x:Name="lvResult">
                
            </ListView>
        </GroupBox>
        
        <!--#endregion-->

        <!--#region Buttons -->
        <Grid Grid.Row="3" Grid.Column="1" Margin="0px, 10px, 0px, 10px">
            <Grid.RowDefinitions>
                <RowDefinition Height="10px" />
                <RowDefinition Height="60px" />
                <RowDefinition Height="10px" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="1" Grid.Column="0">ClickMe</Button>
        </Grid>
        
        <!--#endregion-->
        
    </Grid>
</Window>
